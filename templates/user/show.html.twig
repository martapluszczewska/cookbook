{% extends 'base.html.twig' %}

{% block title %}
    {{ 'label_change_data'|trans }}
{% endblock %}

{% block body %}

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <div class="container">
        <div class="row flex-lg-nowrap justify-content-center">
            <div class="col-md-10">
                <div class="row">
                    <div class="col mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="e-profile">
                                    <div class="row">
                                        <div class="col-12 col-sm-auto mb-3">
                                            <div class="mx-auto" style="width: 140px;">
                                                <div class="d-flex justify-content-center align-items-center rounded" style="height: 140px; background-color: rgb(233, 236, 239);">
                                                    <span style="color: rgb(166, 168, 170); font: bold 8pt Arial;">140x140</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
                                            <div class="text-center text-sm-left mb-2 mb-sm-0">
                                                <h4 class="pt-sm-2 pb-1 mb-0 text-nowrap">
                                                    {{ user.userdata.firstName }} {{ user.userdata.lastName }}
                                                </h4>
                                                <p class="mb-0">@{{ user.userdata.nick }}</p>
                                                <div class="mt-2">
                                                    <button class="btn btn-info rounded-0" type="button">
                                                        <i class="fa fa-fw fa-camera"></i>
                                                        <span>Change Photo</span>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-content pt-3">
                                        <div class="tab-pane active">
                                            <form class="form" novalidate="">
                                                <div class="row">
                                                    <div class="col">
                                                        <div class="row">
                                                            <div class="col">
                                                                <div class="form-group">
                                                                    <label>{{ 'label_firstName'|trans }}</label>
                                                                    <input class="form-control" type="text" name="name" placeholder="{{ user.userdata.firstName }}" value="{{ user.userdata.firstName }}">
                                                                </div>
                                                            </div>
                                                            <div class="col">
                                                                <div class="form-group">
                                                                    <label>{{ 'label_lastName'|trans }}</label>
                                                                    <input class="form-control" type="text" name="username" placeholder="{{ user.userdata.lastName }}" value="{{ user.userdata.lastName }}">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col">
                                                                <div class="form-group">
                                                                    <label>{{ 'label_nick'|trans }}</label>
                                                                    <input class="form-control" type="text" placeholder="{{ user.userdata.nick }}">
                                                                </div>
                                                            </div>
                                                            <div class="col">
                                                                <div class="form-group">
                                                                    <label>{{ 'label.mail'|trans }}</label>
                                                                    <input class="form-control" type="text" placeholder="{{ user.email }}">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12 col-sm-6 mb-3">
                                                        <div class="mb-2"><b>{{ 'label_change_pass'|trans }}</b></div>
                                                        <div class="row">
                                                            <div class="col">
                                                                <div class="form-group">
                                                                    <label>{{ 'current_pass'|trans }}</label>
                                                                    <input class="form-control" type="password" placeholder="••••••">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col">
                                                                <div class="form-group">
                                                                    <label>{{ 'new_pass'|trans }}</label>
                                                                    <input class="form-control" type="password" placeholder="••••••">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col">
                                                                <div class="form-group">
                                                                    <label>{{ 'confirm_pass'|trans }}</label>
                                                                    <input class="form-control" type="password" placeholder="••••••"></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col d-flex justify-content-end">
{#                                                        <button class="btn btn-info rounded-0" type="submit">{{ 'action_save'|trans }}</button>#}
                                                        <input type="submit" value="{{ submit_label|default('action_save'|trans) }}" class="btn btn-info rounded-0" />
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}